// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // Must be postgresql for Vercel
  url      = env("DATABASE_URL")
}

model Agency {
  id          String    @id @default(uuid())
  name        String
  state       String
  city        String?   
  website     String?
  contacts    Contact[]
  createdAt   DateTime  @default(now())
}

model Contact {
  id          String   @id @default(uuid())
  firstName   String?
  lastName    String?
  email       String
  phone       String?
  agencyId    String
  agency      Agency   @relation(fields: [agencyId], references: [id])
  createdAt   DateTime @default(now())
}

// Track how many contacts a user has viewed today
model UserUsage {
  id        String   @id @default(uuid())
  userId    String   // Clerk User ID
  date      String   // Format: YYYY-MM-DD
  count     Int      @default(0)
  
  @@unique([userId, date])
}
